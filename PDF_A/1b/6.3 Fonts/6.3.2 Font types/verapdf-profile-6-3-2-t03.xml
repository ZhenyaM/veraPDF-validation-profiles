<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<rule object="PDFont">
    <id specifcation="ISO_19005_1" clause="6.3.2" testNumber="3"/>
    <description>All fonts used in a conforming file shall conform to the font specifications defined in PDF Reference 5.5. 
			BaseFont - name - (Required) The PostScript name of the font</description>
    <test>Subtype == &quot;Type3&quot; || fontName != null</test>
    <error>
        <message>A BaseFont entry is missing or has invalid type</message>
        <arguments/>
    </error>
    <references>
        <reference specification="PDF 1.4 Reference" clause="5.5.1 - Table 5.8"/>
        <reference specification="PDF 1.4 Reference" clause="5.5.4 - Table 5.9"/>
        <reference specification="PDF 1.4 Reference" clause="5.6.3 - Table 5.13"/>
        <reference specification="PDF 1.4 Reference" clause="5.6.5 - Table 5.17"/>
    </references>
</rule>
